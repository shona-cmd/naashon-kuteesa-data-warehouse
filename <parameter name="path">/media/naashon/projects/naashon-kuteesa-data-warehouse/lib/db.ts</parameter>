<parameter name="content">import { neon } from '@neondatabase/serverless';

const databaseUrl = process.env.DATABASE_URL;

// Helper to check if database is configured
export function getDatabaseUrl(): string | null {
  if (!databaseUrl) {
    return null;
  }
  return databaseUrl;
}

// Get SQL client - returns null if no database URL
export function getSqlClient() {
  const url = getDatabaseUrl();
  if (!url) return null;
  return neon(url);
}

// Export sql as a tagged template function that handles missing database gracefully
export function sql(strings: TemplateStringsArray, ...values: any[]): Promise<any[]> {
  const url = getDatabaseUrl();
  if (!url) {
    // Return a promise that resolves to empty array for graceful degradation
    return Promise.resolve([]);
  }
  // Construct the query string
  let query = '';
  for (let i = 0; i < strings.length; i++) {
    query += strings[i];
    if (i < values.length) {
      query += values[i];
    }
  }
  return neon(url)(query);
}

export async function getPool() {
  const url = getDatabaseUrl();
  if (!url) {
    throw new Error('Database not configured. Please set DATABASE_URL environment variable.');
  }
  const { Pool } = await import('@neondatabase/serverless');
  return new Pool({ connectionString: url, ssl: 'require' });
}

// Helper to check if database is available
export async function checkDatabaseConnection(): Promise<boolean> {
  try {
    const url = getDatabaseUrl();
    if (!url) return false;

    const testSql = neon(url);
    await testSql('SELECT 1');
    return true;
  } catch (error) {
    console.warn('Database connection check failed:', error);
    return false;
  }
}
</parameter>
