<parameter name="content">import { NextRequest, NextResponse } from 'next/server';
import { getServerSession } from 'next-auth/next';
import { authOptions } from '@/lib/auth';
import { sql } from '@/lib/db';
import * as speakeasy from 'speakeasy';
import * as qrcode from 'qrcode';

export async function POST(request: NextRequest) {
  try {
    const session = await getServerSession(authOptions);

    if (!session?.user?.id) {
      return NextResponse.json(
        { success: false, error: 'Unauthorized' },
        { status: 401 }
      );
    }

    const userId = parseInt(session.user.id);

    // Generate MFA secret
    const secret = speakeasy.generateSecret({
      name: `Naashon Data Warehouse (${session.user.email})`,
      issuer: 'Naashon Kuteesa'
    });

    // Generate QR code
    const qrCodeUrl = await qrcode.toDataURL(secret.otpauth_url!);

    // Store secret temporarily (will be confirmed later)
    await sql`
      UPDATE users
      SET mfa_secret = ${secret.base32}
      WHERE id = ${userId}
    `;

    return NextResponse.json({
      success: true,
      data: {
        secret: secret.base32,
        qrCodeUrl,
        otpauth_url: secret.otpauth_url
      }
    });
  } catch (error) {
    console.error('MFA setup error:', error);
    return NextResponse.json(
      { success: false, error: 'Failed to setup MFA' },
      { status: 500 }
    );
  }
}

export async function PUT(request: NextRequest) {
  try {
    const session = await getServerSession(authOptions);
    const { token } = await request.json();

    if (!session?.user?.id) {
      return NextResponse.json(
        { success: false, error: 'Unauthorized' },
        { status: 401 }
      );
    }

    const userId = parseInt(session.user.id);

    // Get user's MFA secret
    const users = await sql`
      SELECT mfa_secret FROM users WHERE id = ${userId}
    `;

    if (users.length === 0 || !users[0].mfa_secret) {
      return NextResponse.json(
        { success: false, error: 'MFA not set up' },
        { status: 400 }
      );
    }

    // Verify token
    const verified = speakeasy.totp.verify({
      secret: users[0].mfa_secret,
      encoding: 'base32',
      token: token,
      window: 2
    });

    if (!verified) {
      return NextResponse.json(
        { success: false, error: 'Invalid MFA token' },
        { status: 400 }
      );
    }

    // Enable MFA
    await sql`
      UPDATE users
      SET mfa_enabled = true
      WHERE id = ${userId}
    `;

    return NextResponse.json({
      success: true,
      message: 'MFA enabled successfully'
    });
  } catch (error) {
    console.error('MFA enable error:', error);
    return NextResponse.json(
      { success: false, error: 'Failed to enable MFA' },
      { status: 500 }
    );
  }
}
</parameter>
